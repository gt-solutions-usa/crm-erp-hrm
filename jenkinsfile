pipeline {
    agent any

    environment {
        DOCKER_COMPOSE_FILE = 'docker-compose.yml'
    }

    stages {
        stage('Checkout') {
            steps {
                // Git repository se code clone karna
                git 'https://github.com/gt-solutions-usa/crm-erp-hrm.git'
            }
        }

        stage('Build & Start Docker Containers') {
            steps {
                script {
                    // Docker Compose up command se containers ko build aur run karna
                    sh 'docker-compose -f ${DOCKER_COMPOSE_FILE} up --build -d'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Agar aapko test run karna ho to yahan test script run kar sakte hain
                    sh 'docker-compose exec -T app npm test' // 'app' service ko replace karein apne service ke naam se
                }
            }
        }

        stage('Clean Up') {
            steps {
                script {
                    // Docker containers ko shutdown karna
                    sh 'docker-compose -f ${DOCKER_COMPOSE_FILE} down'
                }
            }
        }
    }

    post {
        always {
            // Pipeline ke end mein clean up karna
            sh 'docker-compose -f ${DOCKER_COMPOSE_FILE} down || true'
        }
    }
}
